@model PartnerWeb.Models.InsurancePolicy

@{
    ViewBag.Title = "Create";
}

<div class="d-flex flex-row justify-content-center">
    <h2 class="m-5">Create new Policy</h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="d-flex flex-row justify-content-center w-100">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group w-100">
                @Html.LabelFor(model => model.PolicyNumber, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 w-100">
                    @Html.EditorFor(model => model.PolicyNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PolicyNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group w-100">
                @Html.LabelFor(model => model.PolicyPrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 w-100">
                    @Html.EditorFor(model => model.PolicyPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PolicyPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group w-100">
                @Html.LabelFor(model => model.PartnerId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 w-100">
                    @Html.DropDownListFor(model => model.PartnerId, (List<SelectListItem>)ViewBag.Partners, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PartnerId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group w-100">
                <div class="col-md-5 btn btn-success w-100 mt-4" style="color:white">
                    <input type="submit" value="Create" class="btn btn-default rounded" />
                </div>
            </div>
        </div>
    </div>

        <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
